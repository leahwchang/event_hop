<div class="pagetitle">
	<h1>Create a new Event!</h1>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-4 col-sm-offset-1">
			<div class="eventinfo">
				<h3 class="place-name"> <%= @place.name %> </h3>
				<br>
				<h4> <%= @place.address %></h4>
				<h4> <%= @place.website %></h4>
				<h4> <%= @place.description %> </h4>
				<br>
				<h4> <%= image_tag @place.avatar.url(:medium), class: "img-responsive center-block" %> </h4>
			</div>
		</div>

		<div class="col-xs-12 col-sm-6 text-center">
			<h3>Select a Time to Create the Event</h3>
			<h3>Include Emails of Your Friends and Send Out Invites!</h3>
			<div class="eventform">
				<%= form_for [@place, @event] do |f| %>
				<div class="form">
					<%= f.label :start, "Event Start Time" %><br>
					<%= f.datetime_select :start, {:start_year => Date.today.year,:minute_step => 15, :ampm => true} ,required: true %>
				</div>

				<div class="form">
					<%= f.label :description, "Describe the Event." %><br>
					<%= f.text_area :description %>
				</div>

				<div class="form">
					<%= f.label :email, "Email Your Friends an Invite!" %><br>
					<%= f.text_area :email, required: true %>
				</div>

				<div class="form">
					<div class="submitbutton"> <%= f.submit %> </div>
				</div>

				<% end %>
			</div>
		</div>
	</div>
</div>
